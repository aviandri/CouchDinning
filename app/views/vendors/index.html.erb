<div>
	<p>
		<%= link_to "+New",
		            new_vendor_path,
		            :class => 'btn btn-success btn-large' %>
	</p>
</div>
<ul class="thumbnails">
	<% @vendors.each do |vendor| %>
	
	<li class="span4">
    	<div href="#" class="thumbnail">			
			<%= image_tag(vendor.logo_image(:medium))%>
			<h4><%= vendor.name %></h4>
			<p><%= vendor.description %></p>
			<p>
				<%= link_to "See Menu", vendor_items_path(vendor.id), :class => "btn btn-primary" %>
			</p>
	    </div>
	</li>
	
	
	<% end %>
</ul>

	



	

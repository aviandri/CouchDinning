<h1>Listing items</h1>

<div>
	<p>
		<%= link_to "+New",
		            new_item_path,
		            :class => 'btn btn-success btn-large' %>
	</p>
</div>
<ul class="thumbnails">
	<% @items.each do |item| %>
	
	<li class="span4">
    	<div href="#" class="thumbnail">			
			<%= image_tag(item.avatar(:medium))%>
			<h4><%= item.name %></h4>
			<p><%= item.description %></p>
			<p>
				<a href="#" class="btn btn-primary">Order</a>
			</p>
	    </div>
	</li>
	<% end %>
</ul>

